{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Grovr",
  "version": "0.5.0",
  "identifier": "com.grovr.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Grovr",
        "label": "main",
        "width": 720,
        "height": 520,
        "minWidth": 480,
        "minHeight": 400,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": true,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "category": "DeveloperTool",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": "entitlements.plist",
      "hardenedRuntime": true
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "deep-link": {
      "desktop": {
        "schemes": ["grovr"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERFMDdCMjdFRTlBQUY4NTYKUldSVytLcnBmcklIM3BmZFpIWlBrZU1tVVJ3ak1kalM1NytONnM4NHF0bEF2Ry8zRUwxTlo3aGUK",
      "endpoints": [
        "https://github.com/j1king/grovr/releases/latest/download/latest.json"
      ]
    }
  }
}
